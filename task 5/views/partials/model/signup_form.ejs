<form method="POST" action="/signup" class="col-5 p-3 h-auto">
    <div class="p-3">
        <h1>
            <%= label %>
        </h1>
    </div>
    <div class="p-3">
        <label for="username" class="form-label">Full Name</label>
        <input type="text" class="form-control" name="user_name" id="username" placeholder="Full Name">
    </div>
    <div class="p-3">
        <label for="useremail" class="form-label">Email address</label>
        <input type="email" class="form-control" name="user_email" id="useremail" placeholder="name@example.com">
    </div>
    <div class="p-3">
        <label for="userpassword" class="form-label">Password</label>
        <input type="password" class="form-control" name="user_password" id="userpassword" placeholder="password">
    </div>
    <div class="p-3">
        <button type="submit" class="btn btn-primary">Sign Up</button>
    </div>
</form>